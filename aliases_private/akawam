alias kap="cd ~/Dev/www/kap-laravel"
alias kap-flutter="cd ~/Dev/www/kap-flutter"
alias io-kap="envoyer-project 55935"
alias io-kap-demo="envoyer-project 87263"
alias io-kap-preprod="envoyer-project 57869"
alias wio-kap="watch -n 2 envoyer-project 55935"
alias wio-kap-demo="watch -n 2 envoyer-project 87263"
alias wio-kap-preprod="watch -n 2 envoyer-project 57869"

function gcommit(){
    # Git status
    git status
    # Git add all
    git add .
    # Git status
    git status
    # Git commit
    git commit -m "$*"
    # Git push
    git push
}
function gsend-kap-preprod(){
    # Git get current branch
    current_branch=$(git branch | grep \* | cut -d ' ' -f2)
    # Git checkout to param
    git checkout preprod
    # Git pull
    git pull
    # Git merge current branch
    git merge $current_branch
    # Git add all
    git add .
    # Git commit
    git commit -m "Merge $current_branch in $*"
    # Git push
    git push
    # Git checkout to current branch
    git checkout $current_branch
    # Check io-kap-preprod
    io-kap-preprod
}
alias ssh-kap="ssh $KAP_PROD_SSH_USER@$KAP_PROD_URL -p $KAP_PROD_SSH_PORT"
alias tun-kap-mysql="tunssh -h $KAP_PROD_URL -u $KAP_PROD_SSH_USER -p $KAP_PROD_SSH_PORT -rth localhost -rtp 3306 -ltp 3307"
alias tun-kap-http="tunssh -h $KAP_PROD_URL -u $KAP_PROD_SSH_USER -p $KAP_PROD_SSH_PORT -rth localhost -rtp 80 -ltp 8080"
alias tun-kap-https="tunssh -h $KAP_PROD_URL -u $KAP_PROD_SSH_USER -p $KAP_PROD_SSH_PORT -rth localhost -rtp 443 -ltp 4443"